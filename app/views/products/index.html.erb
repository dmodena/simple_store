<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= "%.2f" % product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% all_products = Product.all %>
<% average_price = all_products.sum(:price) / all_products.count %>
<% all_prices = Array.new %>
<% all_products.each{ |product| all_prices << product.price } %>
<% maximum_price = all_prices.max %>
<% total_quantity = all_products.sum(:stock_quantity) %>

<table>
  <thead>
    <tr>
      <th>Average Price</th>
      <th>Maximum Price</th>
      <th>Number of Products</th>
      <th>Total Quantity</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= "%.2f" % average_price %></td>
      <td><%= "%.2f" % maximum_price %></td>
      <td><%= Product.all.count %></td>
      <td><%= total_quantity %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

